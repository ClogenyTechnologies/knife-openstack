# Specify your gem's dependencies in knife-openstack.gemspec
gemspec

group :development do
	gem 'rspec', '>= 2.7.0'
	gem 'guard-rspec'
	gem 'rspec_junit_formatter'
	gem 'rake'
	gem 'mixlib-shellout'
	gem 'chef-pedant', :git => 'git://github.com/opscode/chef-pedant.git'
end

group :testing do
	gem 'rspec', '>= 2.7.0'
	gem 'guard-rspec'
	gem 'rspec_junit_formatter'
	gem 'rake'
	gem 'mixlib-shellout'
	gem 'chef-pedant', :git => 'git://github.com/opscode/chef-pedant.git'
end